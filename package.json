{
  "name": "gaia",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev:ui": "vite --host",
    "dev:electron": "(wait-on -t 1s http://localhost:5174 2> /dev/null || true) && NODE_ENV=development nodemon --watch ./ --exec electron .",
    "dev:electron:windows": "powershell -NoLogo -NonInteractive -Command \"& { $env:NODE_ENV='development'; wait-on -t 1s http://localhost:5174 ^| Out-Null; $global:LASTEXITCODE = 0; nodemon --watch ./ --exec electron . }\"",
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:electron\"",
    "dev:windows": "concurrently \"npm run dev:ui\" \"npm run dev:electron:windows\"",
    "build:ui": "vite build --config vite.config.js",
    "build": "npm run build:ui && electron-builder",
    "test:dataframe": "node dataframe-test.js"
  },
  "dependencies": {
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.4.6",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "svelte": "^4.2.18",
    "vite": "^4.5.5",
    "wait-on": "^9.0.1"
  }
}
