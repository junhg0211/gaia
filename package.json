{
  "name": "gaia",
  "version": "0.1.2",
  "license": "MIT",
  "author": {
    "name": "Sch",
    "email": "junhg0211@gmail.com"
  },
  "description": "Mapping tool for infinite worlds",
  "homepage": "https://github.com/junhg0211/gaia#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/junhg0211/gaia.git"
  },
  "bugs": {
    "url": "https://github.com/junhg0211/gaia/issues"
  },
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev:ui": "vite --host",
    "dev:electron": "(wait-on -t 1000 http://127.0.0.1:5174 2> /dev/null || true) && NODE_ENV=development nodemon --watch index.js --watch ws-server.js --watch dataframe.js --watch dataframe-fs.js --ext js --exec electron .",
    "dev:electron:windows": "powershell -NoLogo -NonInteractive -Command \"& { $env:NODE_ENV='development'; try { wait-on -t 1000 http://127.0.0.1:5174 | Out-Null } catch { }; nodemon --watch index.js --watch ws-server.js --watch dataframe.js --watch dataframe-fs.js --ext js --exec electron . }\"",
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:electron\" --kill-others",
    "dev:windows": "concurrently \"npm run dev:ui\" \"npm run dev:electron:windows\"",
    "build:ui": "vite build --config vite.config.js",
    "build": "npm run build:ui && electron-builder --publish=never",
    "test:dataframe": "node dataframe-test.js",
    "start": "npm run build:ui && NODE_ENV=production electron .",
    "start:windows": "npm run build:ui && set NODE_ENV=production && electron ."
  },
  "build": {
    "appId": "org.shtelo.gaia",
    "productName": "Gaia",
    "asar": true,
    "icon": "assets/icon",
    "files": [
      "dist/**/*",
      "renderer/dist/**/*",
      "index.js",
      "ws-server.js",
      "dataframe.js",
      "dataframe-fs.js",
      "node_modules/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Zasoque",
        "repo": "gaia",
        "releaseType": "release"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "portable",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "deb",
        "zip"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "bootstrap-icons": "^1.13.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.4.6",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "svelte": "^4.2.18",
    "vite": "^4.5.5",
    "wait-on": "^9.0.1"
  }
}
