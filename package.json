{
  "name": "gaia-server",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev:ui": "vite",
    "dev:electron": "wait-on http://localhost:5174 && NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:electron\"",
    "build:ui": "vite build --config vite.config.js",
    "build": "npm run build:ui && electron-builder"
  },
  "dependencies": {
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "svelte": "^5.39.8",
    "vite": "^7.1.8",
    "wait-on": "^9.0.1"
  }
}
